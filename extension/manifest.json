{
    "manifest_version": 3,
    "name": "X Manager Interceptor",
    "version": "1.0",
    "description": "Intercepts X.com traffic and saves to X Manager",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "*://twitter.com/*",
        "*://x.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://twitter.com/*",
                "*://x.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_start"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "injected.js"
            ],
            "matches": [
                "*://twitter.com/*",
                "*://x.com/*"
            ]
        }
    ]
}